  <section class="form-auth text-center">

 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


    <h1 class="h3 mb-3 font-weight-normal">Log In</h1>
    <label for="inputEmail" class="sr-only">Email address</label>

    <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "email address", autocomplete: "current-password" %>
    <label for="inputPassword" class="sr-only">Password</label>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control", id:"inputPassword" %>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
 <% end %>

    

<%= render "devise/shared/links" %>

</section>